{
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "css",
        "markdown",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "solidity",
        "json",
        "yaml",
        "terraform"
    ],
    "codeLens.enable": true,
    "diagnostic.virtualText": false,
    "diagnostic.virtualTextCurrentLineOnly": true,

    "python.formatting.provider": "black",
    "diagnostic.checkCurrentLine": true,
    "diagnostic.autoRefresh": true,
    "python.formatting.blackPath": "/opt/homebrew/bin/black",

    "prettier.requireConfig": false,
    "prettier.disableLanguages": [],
    "prettier.documentSelectors": ["**/*.js", "**/*.ts", "**/*.sol", "**/*.yml", "**/*.yaml"],

    "languageserver": {
		"terraform": {
			"command": "/opt/homebrew/bin/terraform",
			"args": ["fmt"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		},
        "graphql": {
            "command": "/Users/gvanderest/.yarn/bin/graphql-lsp",
            "args": ["server", "-m", "stream"],
            // customize filetypes to your needs
            "filetypes": ["typescript", "typescriptreact", "graphql"]
        }
    }
}
